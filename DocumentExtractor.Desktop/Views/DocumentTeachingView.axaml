<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:DocumentExtractor.Desktop.ViewModels"
             x:Class="DocumentExtractor.Desktop.Views.DocumentTeachingView"
             x:DataType="vm:ConversationalLearningViewModel">

    <Design.DataContext>
        <vm:ConversationalLearningViewModel/>
    </Design.DataContext>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="DarkBlue" CornerRadius="10,10,0,0" Padding="20" Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock Text="🎓 Document Intelligence Training Center" 
                              FontSize="20" FontWeight="Bold" 
                              Foreground="White"/>
                    <TextBlock Text="Upload documents • Train AI patterns • Build document intelligence • Track learning progress" 
                              FontSize="12" Foreground="LightBlue" Margin="0,3,0,0"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" HorizontalAlignment="Right">
                    <TextBlock Text="{Binding StatusMessage}" FontSize="12" Foreground="White" FontWeight="Bold"/>
                    <TextBlock Text="Ready for AI training" FontSize="10" Foreground="LightBlue"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Main Content Area -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Document Upload & Training Area -->
            <Border Grid.Column="0" Background="White" BorderBrush="LightGray" BorderThickness="1" 
                    CornerRadius="8" Padding="20" Margin="0,0,10,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Upload Zone Header -->
                    <TextBlock Grid.Row="0" Text="📄 Document Training Zone" 
                              FontSize="18" FontWeight="Bold" 
                              Margin="0,0,0,20" HorizontalAlignment="Center"/>
                    
                    <!-- Main Upload Area -->
                    <Border Grid.Row="1" 
                           Background="#F8F9FA" 
                           BorderBrush="DarkBlue" 
                           BorderThickness="2" 
                           CornerRadius="15" 
                           Padding="30"
                           MinHeight="300">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <!-- Upload Icon -->
                            <TextBlock Text="📁" FontSize="64" HorizontalAlignment="Center" 
                                      Foreground="DarkBlue" Margin="0,0,0,20"/>
                            
                            <!-- Upload Instructions -->
                            <TextBlock Text="Drag &amp; Drop Documents Here" 
                                      FontSize="18" FontWeight="Bold" 
                                      HorizontalAlignment="Center" 
                                      Foreground="DarkBlue" 
                                      Margin="0,0,0,10"/>
                            
                            <TextBlock Text="or click to browse files" 
                                      FontSize="14" 
                                      HorizontalAlignment="Center" 
                                      Foreground="Gray" 
                                      Margin="0,0,0,20"/>
                            
                            <!-- Document Type Icons -->
                            <Grid Margin="0,0,0,20">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                                    <TextBlock Text="⚡" FontSize="24" HorizontalAlignment="Center"/>
                                    <TextBlock Text="Utility Bills" FontSize="10" HorizontalAlignment="Center" Foreground="Gray"/>
                                </StackPanel>
                                
                                <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                                    <TextBlock Text="🧾" FontSize="24" HorizontalAlignment="Center"/>
                                    <TextBlock Text="Invoices" FontSize="10" HorizontalAlignment="Center" Foreground="Gray"/>
                                </StackPanel>
                                
                                <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                                    <TextBlock Text="🏥" FontSize="24" HorizontalAlignment="Center"/>
                                    <TextBlock Text="Medical" FontSize="10" HorizontalAlignment="Center" Foreground="Gray"/>
                                </StackPanel>
                                
                                <StackPanel Grid.Column="3" HorizontalAlignment="Center">
                                    <TextBlock Text="💼" FontSize="24" HorizontalAlignment="Center"/>
                                    <TextBlock Text="Business" FontSize="10" HorizontalAlignment="Center" Foreground="Gray"/>
                                </StackPanel>
                            </Grid>
                            
                            <!-- Upload Buttons -->
                            <StackPanel Orientation="Horizontal" Spacing="15">
                                <Button Content="📄 Upload Document" 
                                       Command="{Binding UploadDocumentCommand}"
                                       Background="DarkBlue" Foreground="White"
                                       Padding="20,10" FontSize="14" FontWeight="Bold"
                                       CornerRadius="8"/>
                                
                                <Button Content="📋 Upload Template" 
                                       Command="{Binding UploadTemplateCommand}"
                                       Background="Purple" Foreground="White"
                                       Padding="20,10" FontSize="14" FontWeight="Bold"
                                       CornerRadius="8"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                    
                    <!-- Processing Status -->
                    <Border Grid.Row="2" 
                           Background="LightYellow" 
                           BorderBrush="Orange" 
                           BorderThickness="1" 
                           CornerRadius="5" 
                           Padding="15" 
                           Margin="0,20,0,0"
                           IsVisible="{Binding IsProcessing}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="⚙️" FontSize="16" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <TextBlock Text="{Binding StatusMessage}" 
                                      FontSize="14" VerticalAlignment="Center" 
                                      FontWeight="Bold" Foreground="DarkOrange"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
            
            <!-- Learning Analytics & Progress Panel -->
            <Border Grid.Column="1" Background="White" BorderBrush="LightGray" BorderThickness="1" 
                    CornerRadius="8" Padding="15">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Analytics Header -->
                    <TextBlock Grid.Row="0" Text="📊 Learning Analytics" 
                              FontSize="16" FontWeight="Bold" 
                              Margin="0,0,0,15" HorizontalAlignment="Center"/>
                    
                    <!-- Quick Stats -->
                    <Grid Grid.Row="1" Margin="0,0,0,15">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Documents Processed -->
                        <Border Grid.Row="0" Background="LightBlue" CornerRadius="5" Padding="10" Margin="0,0,0,5">
                            <StackPanel>
                                <TextBlock Text="📄" FontSize="20" HorizontalAlignment="Center"/>
                                <TextBlock Text="0" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>
                                <TextBlock Text="Documents Trained" FontSize="10" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- Patterns Learned -->
                        <Border Grid.Row="1" Background="LightGreen" CornerRadius="5" Padding="10" Margin="0,0,0,5">
                            <StackPanel>
                                <TextBlock Text="🧠" FontSize="20" HorizontalAlignment="Center"/>
                                <TextBlock Text="0" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>
                                <TextBlock Text="Patterns Learned" FontSize="10" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- Accuracy Rate -->
                        <Border Grid.Row="2" Background="LightCyan" CornerRadius="5" Padding="10">
                            <StackPanel>
                                <TextBlock Text="🎯" FontSize="20" HorizontalAlignment="Center"/>
                                <TextBlock Text="0%" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>
                                <TextBlock Text="Accuracy Rate" FontSize="10" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                    
                    <!-- Document Type Categories -->
                    <Border Grid.Row="2" Background="WhiteSmoke" BorderBrush="LightGray" 
                           BorderThickness="1" CornerRadius="5" Padding="10">
                        <StackPanel>
                            <TextBlock Text="📁 Document Categories" FontSize="14" FontWeight="Bold" Margin="0,0,0,10"/>
                            
                            <!-- Category List -->
                            <StackPanel Spacing="5">
                                <Border Background="White" CornerRadius="3" Padding="8" BorderBrush="LightGray" BorderThickness="1">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="⚡" FontSize="14" VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="1" Text="Utility Bills" FontSize="12" VerticalAlignment="Center" Margin="8,0"/>
                                        <TextBlock Grid.Column="2" Text="0" FontSize="12" VerticalAlignment="Center" FontWeight="Bold" Foreground="Blue"/>
                                    </Grid>
                                </Border>
                                
                                <Border Background="White" CornerRadius="3" Padding="8" BorderBrush="LightGray" BorderThickness="1">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="🧾" FontSize="14" VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="1" Text="Invoices" FontSize="12" VerticalAlignment="Center" Margin="8,0"/>
                                        <TextBlock Grid.Column="2" Text="0" FontSize="12" VerticalAlignment="Center" FontWeight="Bold" Foreground="Blue"/>
                                    </Grid>
                                </Border>
                                
                                <Border Background="White" CornerRadius="3" Padding="8" BorderBrush="LightGray" BorderThickness="1">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="🏥" FontSize="14" VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="1" Text="Medical" FontSize="12" VerticalAlignment="Center" Margin="8,0"/>
                                        <TextBlock Grid.Column="2" Text="0" FontSize="12" VerticalAlignment="Center" FontWeight="Bold" Foreground="Blue"/>
                                    </Grid>
                                </Border>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                    
                    <!-- Quick Actions -->
                    <StackPanel Grid.Row="3" Margin="0,15,0,0" Spacing="8">
                        <Button Content="📈 View Learning Progress" 
                               Background="Green" Foreground="White"
                               Padding="10,8" FontSize="12"
                               HorizontalAlignment="Stretch"/>
                        
                        <Button Content="🔧 Manage Patterns" 
                               Background="Orange" Foreground="White"
                               Padding="10,8" FontSize="12"
                               HorizontalAlignment="Stretch"/>
                        
                        <Button Content="💾 Export Training Data" 
                               Background="Purple" Foreground="White"
                               Padding="10,8" FontSize="12"
                               HorizontalAlignment="Stretch"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
        
        <!-- Teaching Workflow Steps -->
        <Border Grid.Row="2" Background="LightBlue" CornerRadius="0,0,10,10" Padding="15" Margin="0,10,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Step 1 -->
                <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                    <TextBlock Text="1️⃣" FontSize="20" HorizontalAlignment="Center"/>
                    <TextBlock Text="Upload Document" FontSize="12" FontWeight="Bold" HorizontalAlignment="Center"/>
                    <TextBlock Text="PDF, Image, or scan" FontSize="10" HorizontalAlignment="Center" Foreground="DarkBlue"/>
                </StackPanel>
                
                <!-- Step 2 -->
                <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                    <TextBlock Text="2️⃣" FontSize="20" HorizontalAlignment="Center"/>
                    <TextBlock Text="AI Processing" FontSize="12" FontWeight="Bold" HorizontalAlignment="Center"/>
                    <TextBlock Text="OCR + pattern detection" FontSize="10" HorizontalAlignment="Center" Foreground="DarkBlue"/>
                </StackPanel>
                
                <!-- Step 3 -->
                <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                    <TextBlock Text="3️⃣" FontSize="20" HorizontalAlignment="Center"/>
                    <TextBlock Text="Review &amp; Teach" FontSize="12" FontWeight="Bold" HorizontalAlignment="Center"/>
                    <TextBlock Text="Correct extraction errors" FontSize="10" HorizontalAlignment="Center" Foreground="DarkBlue"/>
                </StackPanel>
                
                <!-- Step 4 -->
                <StackPanel Grid.Column="3" HorizontalAlignment="Center">
                    <TextBlock Text="4️⃣" FontSize="20" HorizontalAlignment="Center"/>
                    <TextBlock Text="Pattern Learning" FontSize="12" FontWeight="Bold" HorizontalAlignment="Center"/>
                    <TextBlock Text="AI improves accuracy" FontSize="10" HorizontalAlignment="Center" Foreground="DarkBlue"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>

</UserControl>