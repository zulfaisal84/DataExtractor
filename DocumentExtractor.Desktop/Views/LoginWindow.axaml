<Window xmlns="https://github.com/avaloniaui" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Title="Sign in" Width="360" Height="220">
  <StackPanel Margin="20" Spacing="10">
    <TextBlock Text="Email"/>
    <TextBox Text="{Binding Email, Mode=TwoWay}"/>
    <TextBlock Text="Password"/>
    <PasswordBox Password="{Binding Password, Mode=TwoWay}"/>
    <Button Content="Sign in" Command="{Binding LoginCommand}"/>
    <TextBlock Foreground="Red" Text="{Binding Error}"/>
  </StackPanel>
</Window>