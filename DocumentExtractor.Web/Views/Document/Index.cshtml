@model IEnumerable<DocumentExtractor.Core.Models.ExtractedDocument>

@{
    ViewBag.Title = "Document Intelligence Desktop Application";
}

<!-- Welcome Section -->
<div class="welcome-section">
    <h1>Welcome to Document Intelligence</h1>
    <p class="subtitle">Your AI-powered document processing solution</p>
    
    <!-- Feature Cards -->
    <div class="feature-cards">
        <div class="feature-card">
            <div class="feature-icon text-primary">
                <i class="bi bi-cloud-upload"></i>
            </div>
            <h3>Upload Documents</h3>
            <p>Start by uploading your documents for intelligent processing</p>
        </div>
        <div class="feature-card">
            <div class="feature-icon text-danger">
                <i class="bi bi-brain"></i>
            </div>
            <h3>AI Learning</h3>
            <p>Our AI learns from your documents to improve accuracy over time</p>
        </div>
    </div>
    
    <!-- Recent Activity -->
    <div class="recent-activity">
        <h4>
            <i class="bi bi-clock-history"></i>
            Recent Activity
        </h4>
        <p class="text-muted">Application started successfully</p>
    </div>
</div>


<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">üóëÔ∏è Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this document?</p>
                <p><strong id="deleteFileName"></strong></p>
                <p class="text-muted">This action cannot be undone.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form method="post" asp-action="Delete" style="display: inline;">
                    <input type="hidden" name="id" id="deleteDocumentId">
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function deleteDocument(id, fileName) {
            document.getElementById('deleteDocumentId').value = id;
            document.getElementById('deleteFileName').textContent = fileName;
            new bootstrap.Modal(document.getElementById('deleteModal')).show();
        }
    </script>
}