<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document Intelligence Desktop Application v1.0</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DocumentExtractor.Web.styles.css" asp-append-version="true" />
</head>
<body class="desktop-app-body">
    <!-- Dark Header -->
    <div class="desktop-header">
        <div class="container-fluid px-4 py-3">
            <div class="d-flex align-items-center">
                <i class="bi bi-file-earmark-text text-white fs-2 me-3"></i>
                <div>
                    <h3 class="text-white mb-0 fw-bold">Document Intelligence Desktop Application</h3>
                    <p class="text-white-50 mb-0 small">Professional document processing with AI-powered pattern learning</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Application Layout -->
    <div class="desktop-layout">
        <!-- Sidebar -->
        <div class="desktop-sidebar">
            <!-- Statistics Section -->
            <div class="sidebar-section">
                <div class="sidebar-title">
                    <i class="bi bi-bar-chart text-primary"></i>
                    <span>Statistics</span>
                </div>
                <div class="stats-container">
                    <div class="stat-item text-center">
                        <div class="stat-number text-primary">16</div>
                        <div class="stat-label">Total Documents</div>
                    </div>
                    <div class="stat-item text-center">
                        <div class="stat-number text-success">93.3%</div>
                        <div class="stat-label">Pattern Success</div>
                    </div>
                    <div class="stat-item text-center">
                        <div class="stat-number text-danger">9/9</div>
                        <div class="stat-label">Learned Patterns</div>
                    </div>
                </div>
            </div>

            <!-- Actions Section -->
            <div class="sidebar-section">
                <div class="sidebar-title">
                    <i class="bi bi-rocket text-warning"></i>
                    <span>Actions</span>
                </div>
                <div class="action-buttons">
                    <a href="/Document/Upload" class="action-btn btn-upload">
                        <i class="bi bi-cloud-upload"></i>
                        Upload Documents
                    </a>
                    <a href="/Document/Index" class="action-btn btn-view">
                        <i class="bi bi-files"></i>
                        View Documents
                    </a>
                    <a href="/Database/Patterns" class="action-btn btn-patterns">
                        <i class="bi bi-brain"></i>
                        Manage Patterns
                    </a>
                    <a href="/Database/Export" class="action-btn btn-export">
                        <i class="bi bi-file-earmark-excel"></i>
                        Export Excel
                    </a>
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="desktop-content">
            <main role="main">
                @RenderBody()
            </main>
        </div>
    </div>

    <!-- Status Bar -->
    <div class="desktop-status-bar">
        <div class="d-flex justify-content-between align-items-center px-4 py-2">
            <span class="text-white-50">Application ready</span>
            <div class="d-flex align-items-center text-white-50">
                <i class="bi bi-circle-fill text-success me-2" style="font-size: 8px;"></i>
                <span class="me-3">Connected</span>
                <span id="current-time">08:15:08</span>
            </div>
        </div>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - DocumentExtractor.Web - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
